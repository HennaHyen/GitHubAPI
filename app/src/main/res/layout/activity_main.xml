<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/txtIntType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txtIntType"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/btnGetInt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnGetInt" />

        <Button
            android:id="@+id/btnGetInt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/getData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />ë¶ˆ

        <TextView
            android:id="@+id/txtBooleanType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txtBooleanType"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/btnGetBoolean"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnGetBoolean" />

        <Button
            android:id="@+id/btnGetBoolean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/getData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGetInt" />

        <TextView
            android:id="@+id/txtStringType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txtStringType"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/btnGetString"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnGetString" />

        <Button
            android:id="@+id/btnGetString"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/getData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGetBoolean" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/txtDoubleDataClass"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/btnDoubleDataClass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnDoubleDataClass" />

        <Button
            android:id="@+id/btnDoubleDataClass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/getData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnGetString" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>